{
  "$schema": "https://turbo.build/schema.json",
  "globalEnv": ["AUTH_SECRET", "DATABASE_URL", "NODE_ENV"],
  "pipeline": {
    "build": {
      "dependsOn": ["generate", "^build"],
      "outputs": ["lib/**", "dist/**", "build/**", "api/**", "public/build/**"]
    },
    "dts": {
      "dependsOn": ["generate", "^generate"],
      "outputs": ["lib/types/**"]
    },
    "checks": {
      "dependsOn": ["generate", "^generate"]
    },
    "storybook:build": {
      "dependsOn": ["build"],
      "outputs": ["storybook-static/**"]
    },
    "size-test": {
      "dependsOn": ["^build"]
    },
    "generate": {
      "cache": false
    }
  }
}
